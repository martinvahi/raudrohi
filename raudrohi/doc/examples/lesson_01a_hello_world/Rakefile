#!/usr/bin/env rake

require 'rake'

if !defined? RAUDROHI_HOME
   require 'pathname'
   s_0=nil
   ob_pth=Pathname.new(__FILE__).realpath

   # The next line must be customized:
   RAUDROHI_HOME=ob_pth.parent.parent.parent.parent.to_s
end # if

require RAUDROHI_HOME+"/src/dev_tools/code_generation"+
"/raudrohi_client_aid_t1.rb"

task :default do
   # a relative path to the folder that
   # contains the raudrohi_all_in_one_v<version>.js
   s_URL_raudrohi_home="./../../../src/release"

   # The build_html_t1(...) looks for 
   # ./bonnet/template_* 
   # and applies search-replace to some
   # constants. The search-replace adds 
   # Raudrohi JavaScript Library CSS and JavaScript
   # file names along with their dependencies
   # to the generated file.
   Raudrohi_client_aid_t1.build_html_t2(
   __FILE__,s_URL_raudrohi_home)
end # default


#==========================================================================

